    <div class="container2">
        <form action="/BS_Bookdonate" name="Bookdonate" method="POST">
        <h1>Donate Book</h1>
        <hr>
        <h2>Enter Your User Name</h2>
        <input type="text" name="name0" placeholder="abc@gmail.com" required>
        <h2>Enter Book Name</h2>
        <input type="text" name="name1" placeholder="Enter Book Name lyk RS Agrawal" required>
        <h2>Enter Book Edition</h2>
        <input type="text" name="name2" placeholder="Enter Book Edition">
        <h2>Enter Author of Book</h2>
        <input type="text" name="name3" placeholder="Enter Book Author Name">
        <h2>Subject or Course of Book</h2>
        <input type="text" name="name4" placeholder="Enter Subject or Course" required>
        <h2>Review of Book</h2>
        <textarea name="textarea" id="textarea" cols="30" rows="10" placeholder="Review of Book according to you"></textarea>
        <h2>Enter Your Email Id</h2>
        <input type="email" name="name5" placeholder="abc@gmail.com" required>
        <h2>Enter Your Contact Number</h2>
        <input type="number" name="name6" placeholder="1234567890" required>
        <h2>Enter Your Address</h2>
        <textarea name="textarea2" id="textarea" cols="30" rows="10" placeholder="Enter Your Address" required></textarea>
        <h2>Enter Pincode Number</h2>
        <input type="number" name="name7" placeholder="205001">
        <h2>Todays Date</h2>
        <input type="date" name="name8" placeholder="MM/YYYY"><br><br>
        <input type="submit" value="Submit"><br><br>
        <input type="submit" value="Reset">
    </form>
